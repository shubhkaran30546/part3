<!-- Views/Home/Index.cshtml -->

@{
    ViewData["Title"] = "Spark";
}
@{
    var customerName = ViewBag.CustomerName as string;
}
<style>
    .contact-image {
        width: 200px;
        height: 120px;
        transition: all 0.3s ease; /* Smooth transition for hover effect */
        margin: 15px;
    }

        .contact-image:hover {
            opacity: 0.7;
            border: 2px solid #007bff;
        }
</style>

<div class="container text-center mt-5">
    @if (!string.IsNullOrEmpty(customerName))
    {
        <h1 class="typing-container">Welcome, @customerName!</h1>
    }
    else
    {
        <h1 class="typing-container">Welcome to Spark, Your Ultimate Online Computer Store!. Please <a href="/Account/Login">login</a> or <a href="/Account/Register">register</a>.</h1>
    }
</div>
<div class="d-flex justify-content-center mt-4">
    <a class="btn btn-primary m-2" href="/Computer/List">Browse Computers</a>
    <a class="btn btn-primary m-2" href="/Home/Contact">Contact Us</a>
    <a class="btn btn-primary m-2" href="/Home/Feedback">Feedback</a>
</div>
