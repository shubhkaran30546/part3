@model part3.Models.Order

@{
    ViewData["Title"] = "Order Summary";
}

<h2>Order Summary</h2>

<div>
    <h3>Computer</h3>
    <p>@Model.Computer.Name</p>
    <p>@Model.Computer.Description</p>
    <p>Price: @Model.Computer.Price.ToString("C")</p>
</div>

<h4>Components</h4>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var orderComponent in Model.OrderComponents)
        {
            <tr>
                <td>@orderComponent.Component.Name</td>
                <td>@orderComponent.Component.Price.ToString("C")</td>
                <td>@orderComponent.Component.Type</td>
            </tr>
        }
    </tbody>
</table>

<p>Total Price: @Model.TotalPrice.ToString("C")</p>
<p>Order Date: @Model.OrderDate.ToString("d")</p>
