@model IEnumerable<part3.Models.Computer>

@{
    ViewData["Title"] = "Computer List";
}

<h2>Computer List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var computer in Model)
        {
            <tr>
                <td>@computer.Name</td>
                <td>@computer.Price.ToString("C")</td>
                <td>@computer.Description</td>
                <td>
                    <a href="@Url.Action("Customize", "Computer", new { id = computer.Id })">Customize</a>
                </td>
            </tr>
        }
    </tbody>
</table>
